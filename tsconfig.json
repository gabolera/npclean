{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "rootDirs": ["./src"],
    "paths": {
      "@/*": ["./src"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
